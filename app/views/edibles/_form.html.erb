<%= form_for(edible) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :edible_name, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, id: :edible_description, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, id: :edible_price, :step => 0.01, class: "form-control" %>
  </div>
  
  <div class="actions mt-3">
    <%= f.submit class: "btn btn-outline-success form-control" %>
  </div>
  
<% end %>
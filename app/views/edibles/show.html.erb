<% provide(:title, @edible.name) %>

<div class="row">
  <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2">
    <div class="card m-3">
      <div class="card-body">
        
        <h4 class="card-title"><%= @edible.name %></h4>
        
        <p><%= @edible.description %></p>
        
        <p>
          <strong>Price:</strong> <%= @edible.price %>
        </p>
        
      </div>
    </div>
    
    <p>
      <%= link_to 'Edit', edit_edible_path(@edible), class: 'btn btn-outline-warning ml-3' %> |
      <%= link_to 'Delete', @edible, method: :delete, data: { confirm: 'Are you sure?' },
          class:'btn btn-outline-danger' %>
    </p>
    <p><%= link_to 'All Edibles', edibles_path, class: 'btn btn-outline-dark ml-3' %></p>
    
  </div>
</div>

<% provide(:title, "Edibles") %>

<p id="notice"><%= notice %></p>

<h1>Edibles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @edibles.each do |edible| %>
      <tr>
        <td><%= edible.name %></td>
        <td><%= edible.price %></td>
        <td><%= link_to 'Show', edible %></td>
        <td><%= link_to 'Edit', edit_edible_path(edible) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Edible', new_edible_path %>

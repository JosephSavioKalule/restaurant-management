<% provide(:title, 'Tables') %>

<div class="row">
  <div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
    <div class="card m-3">
      <div class="card-body">
        
        <h4 class="card-title">Tables</h4>
        
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Number of places</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @tables.each do |table| %>
              <tr>
                <td><%= table.name %></td>
                <td><%= table.number_of_places %></td>
                <td><%= link_to 'Show', table %></td>
                <td><%= link_to 'Edit', edit_table_path(table) %></td>
                <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
    
    <%= link_to 'New Table', new_table_path, class: 'btn btn-outline-primary ml-3' %>
    
  </div>
</div>

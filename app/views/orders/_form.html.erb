<%
  # set appropriate url
  if @order.new_record?
    @url = table_orders_path(@order.table)
  else
    @url = order_path(@order)
  end
%>


<%= form_with(model: @order, url:@url, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field custom-control custom-checkbox">
    <%= form.check_box :is_paid, id: :order_is_paid, class: "custom-control-input" %>
    <%= form.label :is_paid, class: "custom-control-label" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-success form-control" %>
  </div>
<% end %>

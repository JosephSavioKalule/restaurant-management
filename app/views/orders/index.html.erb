<% provide(:title, "Orders") %>

<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          Orders
        </h4>
        
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Table</th>
              <th>Total</th>
              <th>Is paid</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.table_id, table_path(order.table) %></td>
                <td><%= order.total %></td>
                <td><%= order.is_paid %></td>
                <td><%= link_to 'Show', order_path(order) %></td>
                <td><%= link_to 'Edit', edit_order_path(order) %></td>
                <td><%= link_to 'Destroy', order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>

